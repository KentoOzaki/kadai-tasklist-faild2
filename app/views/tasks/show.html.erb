<h1> detail of <%= @task.id %> </h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>Detail of task</th>
    <td><%= @task.content %></td>
  </tr>
</table>


<%= link_to "edit this task", edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to "delete this task", @task, method: :delete, data: { confirm: 'Are you sure to delete this task?' }, class: 'btn btn-danger'  %>